{
  "name": "kuposu-ai-resume-maker",
  "version": "1.0.0",
  "description": "KUPOSU AI Resume Maker - AI-powered resume customization tool",
  "main": "electron-main.js",
  "scripts": {
    "dev": "http-server -p 4002 -c-1",
    "build": "echo 'Building extension...' && npm run validate",
    "validate": "node scripts/validate-extension.js",
    "zip": "node scripts/build-zip.js",
    "test": "jest",
    "lint": "eslint popup/ content/ background/",
    "install-backend": "cd backend && npm install",
    "start-backend": "cd backend && npm run dev",
    "deploy": "echo 'Deploy to Chrome Web Store'",
    "dev-all": "concurrently \"npm run dev\" \"npm run start-backend\"",
    "electron": "electron .",
    "electron-dev": "electron . --development",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "resume",
    "linkedin",
    "ats",
    "job-search"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^6.0.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "crypto": "^1.0.1",
    "express-rate-limit": "^8.2.1",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^3.0.4",
    "mammoth": "^1.11.0",
    "nodemailer": "^7.0.11",
    "pdf-parse": "^1.1.4",
    "puppeteer": "^24.33.0",
    "puppeteer-core": "^24.33.0",
    "razorpay": "^2.9.6",
    "uuid": "^13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ai-resume-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ai-resume-chrome-extension/issues"
  },
  "homepage": "https://github.com/yourusername/ai-resume-chrome-extension#readme",
  "type": "commonjs",
  "build": {
    "appId": "com.kuposu.airesume",
    "productName": "KUPOSU AI Resume Maker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "popup/**/*",
      "assets/**/*",
      "start-backend.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

{
  "manifest_version": 3,
  "name": "KUPOSU AI Resume Maker",
  "version": "1.0.0",
  "description": "AI-powered resume customization tool that analyzes job postings and optimizes your resume for better ATS scores",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.naukri.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:4003/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "KUPOSU AI Resume Maker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    },
    {
      "matches": ["https://www.naukri.com/job-listings-*"],
      "js": ["content/naukri-content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "assets/*"],
      "matches": ["https://www.linkedin.com/*", "https://www.naukri.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}